class Solution {
public:
    long long getDescentPeriods(vector<int>& prices) {
        int n = prices.size();
        long long result = n;
        long long count = 0;
        for (int i = 1; i < n; i++) {
            if (prices[i - 1] - prices[i] == 1) {
                count++;
            } else {
                count = 0;
            }
            result += count;
        }
    return result;
    }
};
